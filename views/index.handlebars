<h1>Eat the burger!</h1>

<h2 id="notHungry">Not hungry yet</h2>

<ul>
    {{#each burgerss}}
    {{#unless devoured}}
    {{> burgers/burger-block sleep=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2 id="yum">Yummy!</h2>

<ul>
    {{#each burgers}}
    {{#if sleepy}}
    {{> burgers/burger_block sleep=false}}
    {{/if}}
    {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <label for="submit">Enter in a burger you would like to eat!</label>
        <input type="text" id="submitBurger" name="name">
    </div>


    <button type="submit">Add Burger</button>
</form>