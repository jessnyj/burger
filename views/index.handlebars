<div class="header">
<h1>Eat the burger!</h1>
<img class="burgerPic" src="/assets/img/burger.png" alt="Delicious Burger">
</div>

<div class="container">
<div class="row justify-content-center">
<div class="col-6">
<h2 id="notHungry">Not hungry yet</h2>
<ol>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/if}}
    {{/each}}
</ol>
</div>

<div class="col-6">
<h2 id="yum">Yummy!</h2>
<ol>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/unless}}
    {{/each}}
</ol>
</div>
</div>
</div>

<div class="form">
<form id="create-form">
    <div class="form-group">
        <label for="submit">Enter in a burger you would like to eat!</label>
        <input type="text" id="submitBurgerForm" name="name">
    </div>
    <button id="submitBurger" type="submit">Add Burger</button>
</form>
</div>