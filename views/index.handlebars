<div class="header">
<h1>Eat the burger!</h1>
<img class="burgerPic" src="/assets/img/burger.png" alt="Delicious Burger">
</div>

<div class="no-burger">
<h2 id="notHungry">Not hungry yet</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/if}}
    {{/each}}
</ul>
</div>

<div class="burgerTime">
<h2 id="yum">Yummy!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/unless}}
    {{/each}}
</ul>
</div>

<div class="form">
<form id="create-form">

    <div class="form-group">
        <label for="submit">Enter in a burger you would like to eat!</label>
        <input type="text" id="submitBurgerForm" name="name">
    </div>


    <button id="submitBurger" type="submit">Add Burger</button>
</form>
</div>